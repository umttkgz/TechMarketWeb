@model List<SubCategory>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Alt Kategori Listesi
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="SubCategory" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Yeni Alt Kategori Oluştur
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Alt Kategori Adı
                </th>
                <th>
                    Gösterim Sırası
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>